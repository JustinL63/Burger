<h1>Burgers!</h1>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each data}}
    {{#unless this.devoured}}
     <pre>{{this.id}}. {{this.burger}}</pre>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each data}}
    {{#if this.devoured}}
      
    {{/if}}
  {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    
  </div>

  <form action="/api/burgers" method="POST" class="form-group addBurger">
    <label for="devoured">Devoured?</label><br>
    <input class="id" type="text" name="burger" value="" >
    
    <button type="submit">Add Burger</button>
  </form>

  
</form>
